function grabbit_invites_send_invite($user,$subject,$message){
	$code = invite_generate_code();
    $invite = _invite_substitutions(array(
      'email' => $user,
      'code'  => $code,
      'resent'  => 0,
      'data'  => array('subject' => $subject, 'message' => $message),
    ));

    invite_save($invite);

    return $invite;

}