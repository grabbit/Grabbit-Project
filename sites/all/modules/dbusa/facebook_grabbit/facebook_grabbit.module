function get_url_msg_formatted($msg){
	/*
	// Saving everything correctly formatted in one single $mag var. It includes URL's anchors.
	// NOTE: Check if it works when it starts or ends with an URL
	*/
	
	// $pattern can be changed for further optimization
	$pattern = "http://";
	$msg_formatted = '';
      
	$split = split($pattern,$msg);
	$msg_formatted .= $split[0];
	
	for ($i = 0; $i < count($split) - 1; $i++){
	  $urll=split(' ',$split[$i+1]);
	  
	  //$url1 stores the real URL in format: http://www.google.com
	  $url1 = 'http://'.$urll[0];
	  
	  //$text stores the text between URL's
	  $shift = array_shift($urll);
	  $text = implode(' ',$urll);
	  
	  //$msg_formatted is getting formatted the original message with anchors.
	  $msg_formatted .= '<a href="'.$url1.'" target="_blank">';
	  $msg_formatted .= $url1;
	  $msg_formatted .= '</a> ';
	  $msg_formatted .= $text;
	}
	
	return $msg_formatted;
}

