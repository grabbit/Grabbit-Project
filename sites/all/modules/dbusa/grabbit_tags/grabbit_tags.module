function grabbit_tags_save(){
	
	$nid=$_GET['nid'];
	
	if($_GET['tags']){
	
		$terms=$_GET['tags'];
		$node=node_load($nid);
		$node->taxonomy=array();
		if (isset($terms)) {
           $node->taxonomy['tags'][3]=$terms;
        }

        taxonomy_node_save($node, $node->taxonomy);

	    print "OK";	// Everything went smooth

	}else{
		print "OT"; // No terms sent, so we return a no terms message to handle
	}	
}

