		 );	 
	$form['searc'] = array(
	    '#type' => 'textfield',
	    '#title' => t('Search'),
	    '#required' => TRUE,
	    '#size' => 20
	  );
	  $form['submit'] = array(
	    '#type' => 'submit',
	    '#value' => t('Save'),
	  ); 
	
	return $form;
}

