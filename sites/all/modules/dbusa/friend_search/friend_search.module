<?php

/**
 * Implementation of hook_block()
 */
function friend_search_block($op = 'list', $delta = 0, $edit = array()) {
  switch($op) {
    case 'list':
      $blocks[0]['info'] = t('Friend Search');
      return $blocks;
      break;
    case 'view':
      switch ( $delta )
      {
		case 0:
          $blocks['title'] = 'Find People';
          $blocks['content'] = drupal_get_form('friend_search_people_form');
          break;
      }
      return $blocks;
      break;
  }
}

/**
 * Implementation of hook_form() for find people
 */
function friend_search_people_form($form_state, $post_id){
	
  	$form['name'] = array(
	    '#type' => 'textfield',
	    '#size' => 60,
	    '#maxlength' => 255,
	    '#required' => true );

	$form['submit'] = array(
	    '#type' => 'submit',
	    '#value' => t('Comment'),
	    '#weight'=>10
	);	
	
	$form['#action'] = url('search/friend');
	
	$form['#method'] = 'get';
	
  return $form;
}
