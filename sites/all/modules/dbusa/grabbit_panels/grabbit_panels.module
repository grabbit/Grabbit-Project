/**
 * Implementation of hook_menu()
 */
function grabbit_panels_menu () {
	$items['panels_show'] = array( 
    'page callback' => 'grabbit_panels_get_panels', 
    'access arguments' => array('access content')
  );

  return $items;
}

function grabbit_panels_get_panels(){
	global $user;
	
	$private_view = facebook_grabbit_private_view_panel();
	$output = theme_panels($private_view,1);
	$output .= theme_panels($private_view,2);
	$output .= theme_panels($private_view,3);
	
	return $output;
}

function theme_panels($private_view,$id){

	$output = '<div class="panel-grabbit" id="'.$id.'"><h3 class="title">Pannel '.$id.'</h3>'.$private_view."</div>";
	
	return $output;
}

