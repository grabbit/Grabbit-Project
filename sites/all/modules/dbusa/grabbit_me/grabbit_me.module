function grabbit_me_get_statuses($uid,$limit=10){
	
  $result = db_query("SELECT extra FROM {grabbit_me} WHERE uid=%d AND type='status' LIMIT %d",$uid,$limit);

  while($updates=db_fetch_object($result)){
    print_r($updates);	
  }
	
}